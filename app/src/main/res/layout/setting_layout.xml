<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
<RelativeLayout

    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:layout_margin="5dp"
        android:id="@+id/text_setting"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_below="@+id/text_setting"
       android:id="@+id/line1"
       android:background="@color/colorPrimaryDark"

    />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:id="@+id/layout1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Throttle normal : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/throttle_normal"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Throttle max : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/throttle_max"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Yaw normal : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/yaw_normal"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:id="@+id/layout4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Yaw max : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/yaw_max"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:id="@+id/layout5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Pitch normal : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/pitch_normal"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout5"
        android:id="@+id/layout6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Pitch max : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/pitch_max"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout6"
        android:id="@+id/layout7"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Roll normal : "
            android:layout_marginStart="5dp"

            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/roll_normal"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout7"
        android:id="@+id/layout8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Roll max : "
            android:layout_marginStart="5dp"
            android:textSize="16sp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/roll_max"
            android:layout_alignParentEnd="true"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_height="2dp"
        android:layout_below="@+id/layout8"
        android:id="@+id/line2"
        android:background="@color/colorPrimaryDark"
        />


</RelativeLayout>
</ScrollView>